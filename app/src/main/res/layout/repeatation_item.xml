<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/grayframe"
                        android:padding="5dp"
                        android:text="12:34 AM"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.47"
                        app:layout_constraintLeft_toLeftOf="@+id/circleImageView2"
                        app:layout_constraintRight_toRightOf="@+id/circleImageView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.924" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/docpic"
                        app:civ_border_color="#cecece"
                        app:civ_border_width="2dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        app:layout_constraintHorizontal_bias="0.264"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.24000001"
                        tools:ignore="UnknownId" />

                    <android.support.v7.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="55dp"
                        android:background="#06b7fd"
                        app:cardCornerRadius="13dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="@+id/circleImageView2"
                        app:layout_constraintRight_toRightOf="@+id/circleImageView2"
                        app:layout_constraintTop_toTopOf="@+id/circleImageView2">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_costumer_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="12"
                                android:textColor="@color/colorbluebotton" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/grayframe"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            app:srcCompat="@drawable/ic_person_black_24dp"
                            tools:ignore="VectorDrawableCompat" />
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="#00ddff"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"></LinearLayout>

                        <TextView
                            android:id="@+id/text_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"

                            android:paddingRight="15dp"

                            android:gravity="center"
                            android:text="ahmed naser" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:srcCompat="@drawable/ic_home_black_24dp"
                            tools:ignore="VectorDrawableCompat" />
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="#00ddff"
                            android:layout_gravity="center"
                            ></LinearLayout>

                        <TextView
                            android:id="@+id/text_costumer_add"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="saqulta" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            app:srcCompat="@drawable/ic_local_phone_black_24dp"
                            tools:ignore="VectorDrawableCompat" />
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="#00ddff"
                            ></LinearLayout>

                        <TextView
                            android:id="@+id/text_costumer_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="......................" />
                        <TextView
                            android:id="@+id/text_costumer_id"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_marginRight="5dp"
                            android:textSize=".5dp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>